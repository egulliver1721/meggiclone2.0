{
  "extends": "tsconfig/client.json",
  "compilerOptions": {
    "jsx": "react",
    "outDir": "dist/client",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "types": ["vite/client"],
    "composite": true, 


    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    }
    
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../server" }]
}