// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Define the User model
model User {
  id         Int          @id @default(autoincrement())
  name       String
  email      String       @unique
  password   String
  address    String?
  phone      String?
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  Order      Order[]
  Newsletter Newsletter[]
}

// Define the Product model
model Product {
  id        Int         @id @default(autoincrement())
  name      String
  price     Float
  image     String
  stock     Int
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  OrderItem OrderItem[]
}

//Define the Order model
model Order {
  id        Int         @id @default(autoincrement())
  status    String      @default("pending")
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  // Define the relationship between the Order and User models
  user      User        @relation(fields: [userId], references: [id])
  userId    Int
  // Define the relationship between the Order and Product models
  items     OrderItem[]
}

// Define the OrderItem model
model OrderItem {
  id        Int      @id @default(autoincrement())
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // Define the relationship between the OrderItem and Order models
  order     Order    @relation(fields: [orderId], references: [id])
  orderId   Int
  // Define the relationship between the OrderItem and Product models
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
}

model Newsletter {
  id        Int      @id @default(autoincrement())
  subject   String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // Define the relationship between the Newsletter and User models
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  email     String
}

// Define the Subscription model
model Subscription {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
